<div class="hero-unit">
  <h2>All Users</h2>
  <%- linkTo('Create a new User', addUserPath, {class: 'btn pull-right'}); %>
</div>

<% if (users) { %>
<% for (var i = 0, ii = users.length; i < ii; i++) { %>
<div class="row list-item">
  <div class="span8">
    <h3><%- linkTo(users[i].id, userPath(users[i].id)); %></h3>
  </div>
  <div class="span4">
    <h3><i class="icon-list-alt"></i><%= users[i].id; %></h3>
  </div>
</div>
<% } %>
<% } %>
